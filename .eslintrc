{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "es6": true,
    "jest": true,
    "browser": true
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.8"
    }
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-set-state": "off",
    "space-before-function-paren": 0,
    "react/jsx-boolean-value": 0
  }
}
